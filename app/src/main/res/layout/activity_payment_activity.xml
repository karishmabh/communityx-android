<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PaymentActivity">

    <include layout="@layout/toolbar"
             android:id="@+id/tool_bar"/>

    <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar"
            android:text="@string/select_options_to_pay"
            android:textSize="@dimen/_14ssp"
            android:layout_margin="@dimen/_10ssp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorBlackTitle"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/text_title">

    </android.support.v7.widget.RecyclerView>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:id="@+id/view_1"
          android:layout_margin="@dimen/_10sdp"
          app:layout_constraintTop_toBottomOf="@+id/recycler_cards"
          android:background="@color/colorLightestGrey"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_debit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/view_1">

    <RadioButton
            android:id="@+id/radio_debit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:checked="false"/>

    <TextView
            android:id="@+id/text_debit_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/radio_debit_button"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Debit Card"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp" android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorBlackTitle"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/linear_debit_card"
                  android:visibility="gone"
                  app:layout_constraintTop_toBottomOf="@+id/text_debit_card">


        <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_card_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/edit_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Number"
                    android:textColor="@color/colorBlackTitle"
                    android:fontFamily="@font/poppins_medium"
                    android:textColorHint="@color/colorLightGrey"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_card_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text_input_card_no">

            <EditText
                    android:id="@+id/edit_card_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Holder Name"
                    android:textColor="@color/colorBlackTitle"
                    android:fontFamily="@font/poppins_medium"
                    android:textColorHint="@color/colorLightGrey"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
                android:id="@+id/linear_expiry_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintTop_toBottomOf="@+id/text_input_card_holder">

            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                <EditText
                        android:id="@+id/edit_cvv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Expiry Date"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/colorBlackTitle"
                        android:fontFamily="@font/poppins_medium"
                        android:textColorHint="@color/colorLightGrey"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                <EditText
                        android:id="@+id/edit_expiry_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CVV"
                        android:drawableEnd="@drawable/ic_payment_method_question_mark"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/colorBlackTitle"
                        android:fontFamily="@font/poppins_medium"
                        android:textColorHint="@color/colorLightGrey"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
                android:id="@+id/button_proceed_to_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_active"
                app:layout_constraintTop_toBottomOf="@+id/linear_expiry_date"
                android:text="@string/pay_now"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="@dimen/_15sdp"/>
    </LinearLayout>

    <TextView
            android:id="@+id/text_debit_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="$100.00"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColor="@color/colorBlackTitle"/>
</android.support.constraint.ConstraintLayout>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:id="@+id/view_2"
          android:layout_margin="@dimen/_10sdp"
          app:layout_constraintTop_toBottomOf="@+id/constraint_debit"
          android:background="@color/colorLightestGrey"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/view_2">

    <RadioButton
            android:id="@+id/radio_credit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:checked="false"/>

    <TextView
            android:id="@+id/text_credit_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/radio_credit_button"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Credit Card"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorBlackTitle"/>

    <LinearLayout
            android:id="@+id/linear_credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/text_credit_card">

        <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_credit_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/edit_credit_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Number"
                    android:textColor="@color/colorBlackTitle"
                    android:fontFamily="@font/poppins_medium"
                    android:textColorHint="@color/colorLightGrey"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_credit_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text_input_card_no">

            <EditText
                    android:id="@+id/edit_credit_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Holder Name"
                    android:textColor="@color/colorBlackTitle"
                    android:fontFamily="@font/poppins_medium"
                    android:textColorHint="@color/colorLightGrey"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
                android:id="@+id/linear_credit_expiry_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintTop_toBottomOf="@+id/text_input_card_holder">

            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                <EditText
                        android:id="@+id/edit_credit_cvv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Expiry Date"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/colorBlackTitle"
                        android:fontFamily="@font/poppins_medium"
                        android:textColorHint="@color/colorLightGrey"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                <EditText
                        android:id="@+id/edit_credit_expiry_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CVV"
                        android:drawableEnd="@drawable/ic_payment_method_question_mark"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/colorBlackTitle"
                        android:fontFamily="@font/poppins_medium"
                        android:textColorHint="@color/colorLightGrey"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
                android:id="@+id/button_credit_proceed_to_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_active"
                app:layout_constraintTop_toBottomOf="@+id/linear_expiry_date"
                android:text="@string/pay_now"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="@dimen/_15sdp"/>

    </LinearLayout>

    <TextView
            android:id="@+id/text_credit_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16ssp"
            android:text="$100.00"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginEnd="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorBlackTitle"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>