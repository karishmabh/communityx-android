<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_80sdp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_praise_back_arrow"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="56dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:id="@+id/imageBack"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user_profile"
                android:layout_marginStart="12dp"
                android:layout_marginTop="56dp"
                app:layout_constraintStart_toEndOf="@+id/imageBack"
                android:src="@drawable/profile_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bella Oliver"
                android:id="@+id/text_title"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintStart_toEndOf="@+id/image_user_profile"
                app:layout_constraintEnd_toStartOf="@id/image_tail_toolbar"
                android:layout_marginStart="12dp"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="14dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_chat_nav_more"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="56dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:id="@+id/image_tail_toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.AppBarLayout>