<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical"
    android:background="@drawable/bg_interest_active"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/text_suggest_cause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_semibold"
        android:padding="@dimen/_4sdp"
        android:text="Club : "
        android:layout_alignParentStart="true"
        android:textColor="@color/colorBlackTitle"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/text_suggest_cause_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_regular"
        android:padding="@dimen/_4sdp"
        android:layout_toRightOf="@id/text_suggest_cause"
        android:layout_toLeftOf="@id/image_cross"
        android:textColor="@color/colorLightGrey"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/text_suggest_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_semibold"
        android:padding="@dimen/_4sdp"
        android:text="Role : "
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_suggest_cause"
        android:textColor="@color/colorBlackTitle"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/text_suggest_club_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_regular"
        android:padding="@dimen/_4sdp"
        android:layout_toRightOf="@id/text_suggest_club"
        android:layout_toLeftOf="@id/image_cross"
        android:layout_below="@id/text_suggest_cause"
        android:textColor="@color/colorLightGrey"
        android:textSize="@dimen/_12sdp" />

    <ImageView
        android:id="@+id/image_cross"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_signup_tag_cross" />
</RelativeLayout>