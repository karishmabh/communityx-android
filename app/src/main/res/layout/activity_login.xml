<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <include android:id="@+id/topView"
             app:layout_constraintTop_toTopOf="parent"
             layout="@layout/layout_top_view_logo"/>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput_email_username"
            style="@style/textInputLayoutColor"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:hint="Mobile Number"
            app:layout_constraintTop_toBottomOf="@+id/topView"
            app:hintTextAppearance="@style/TextInputHint"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_email_username"
                style="@style/textInputEditText"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppins_medium"
                android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput_password"
            style="@style/textInputLayoutColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextInputHint"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:hint="Password"
            app:layout_constraintTop_toBottomOf="@id/textinput_email_username"
            app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_password"
                style="@style/textInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"  />
    </android.support.design.widget.TextInputLayout>

    <TextView
            android:id="@+id/text_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_size_smaller"
            android:layout_marginEnd="@dimen/_15sdp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingEnd="@dimen/_2sdp"
            android:text="Forgot Password"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textinput_password"/>


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginBottom="@dimen/_10sdp"
                  app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:text="Don't have an account?"
                style="@style/text_size_smaller"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackTitle"
                android:fontFamily="@font/poppins_regular" />

        <TextView android:id="@+id/text_signup"
                  android:layout_width="wrap_content"
                  android:text="SignUp"
                  style="@style/text_size_small"
                  android:layout_height="wrap_content"
                  android:textAllCaps="true"
                  android:textColor="@color/colorPrimary"
                  android:fontFamily="@font/poppins_semibold"
                  android:layout_marginStart="@dimen/_5sdp"  />

    </LinearLayout>

    <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:background="@drawable/button_active"
            android:text="Login"
            android:textColor="@android:color/white"
            style="@style/style_button"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_40sdp"
            app:layout_constraintTop_toBottomOf="@+id/textinput_password"
            tools:layout_editor_absoluteX="13dp"/>

</android.support.constraint.ConstraintLayout>