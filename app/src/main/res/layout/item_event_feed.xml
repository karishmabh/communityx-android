<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginBottom="1dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_12sdp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_profile_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:id="@+id/image_user"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/_14ssp"
                  android:textColor="@color/colorBlackTitle"
                  android:text="Lesa West"
                  android:fontFamily="@font/poppins_semibold"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="16dp"
                  app:layout_constraintStart_toEndOf="@+id/image_user"
                  android:layout_marginStart="9dp"
                  android:id="@+id/text_name"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/_10ssp"
                  android:textColor="@color/colorLightGrey"
                  android:text="Agricultural Officer, New York"
                  android:fontFamily="@font/poppins_regular"
                  app:layout_constraintTop_toBottomOf="@+id/text_name"
                  app:layout_constraintStart_toEndOf="@+id/image_user"
                  android:layout_marginStart="9dp"
                  android:id="@+id/text_location"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/_10ssp"
                  android:textColor="@color/colorLightGrey"
                  android:text="7m"
                  android:fontFamily="@font/poppins_regular"
                  android:id="@+id/text_time"
                  android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

        <com.google.android.flexbox.FlexboxLayout android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  app:layout_constraintTop_toBottomOf="@+id/text_location"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="65dp" android:id="@+id/flexboxLayout2">
            <include layout="@layout/item_interest_feed"/>
            <include layout="@layout/item_interest_feed"/>
        </com.google.android.flexbox.FlexboxLayout>


        <TextView android:id="@+id/text_title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/_14ssp"
                  android:textColor="@color/colorBlackTitle"
                  android:text="Climate Change Adaptation and Resilience"
                  android:fontFamily="@font/poppins_semibold"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="20dp"
                  app:layout_constraintTop_toBottomOf="@+id/flexboxLayout2"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"/>


        <TextView android:id="@+id/text_post"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/_12ssp"
                  android:textColor="@color/colorBlackTitle"
                  android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt..."
                  android:fontFamily="@font/poppins_regular"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="20dp"
                  app:layout_constraintTop_toBottomOf="@+id/text_title"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"/>

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/text_post"
                android:id="@+id/view_donation">

            <TextView
                    android:id="@+id/text_event_date"
                    android:text="Fri May 12, 12:30 pm"
                    android:textColor="@color/colorBlackTitle"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@drawable/ic_community_event_calendar"
                    android:drawablePadding="@dimen/_4sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_12sdp"/>

            <TextView
                    android:id="@+id/text_event_location"
                    android:text="Park Ground, Sao Paulo Brazil"
                    android:textColor="@color/colorBlackTitle"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:drawableStart="@drawable/ic_community_event_location_pin"
                    android:drawablePadding="@dimen/_4sdp"
                    app:layout_constraintTop_toTopOf="@id/text_event_date"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_12sdp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorBlackTitle"
                      android:text="3.4 miles"
                      android:drawablePadding="@dimen/_4sdp"
                      android:drawableStart="@drawable/ic_community_event_map_view"
                      android:textSize="@dimen/_10ssp"
                      android:padding="@dimen/_3sdp"
                      android:background="@drawable/bg_stroke_grey"
                      android:fontFamily="@font/poppins_medium"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="21dp"
                      android:layout_marginTop="19dp"
                      app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                    android:id="@+id/view_intrested_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_event_location">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        app:civ_border_width="@dimen/_1sdp"
                        app:civ_border_color="@color/colorLightestGrey"
                        android:src="@drawable/ic_profile_placeholder"
                />

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="-8dp"
                        app:civ_border_width="@dimen/_1sdp"
                        app:civ_border_color="@color/colorLightestGrey"
                        android:src="@drawable/ic_profile_placeholder"
                />

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="-8dp"
                        app:civ_border_width="@dimen/_1sdp"
                        app:civ_border_color="@color/colorLightestGrey"
                        android:src="@drawable/ic_profile_placeholder"
                />

            </LinearLayout>

            <TextView
                    android:id="@+id/text_intrested_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/colorBlackTitle"
                    android:text="1.2K"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintStart_toEndOf="@id/view_intrested_holder"
                    app:layout_constraintTop_toBottomOf="@id/text_event_location"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    android:id="@+id/text_intrested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/colorBlackTitle"
                    android:text="Interested"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@id/text_intrested_count"
                    app:layout_constraintTop_toBottomOf="@id/text_event_location"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <ImageView android:id="@+id/image_like"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:srcCompat="@drawable/ic_my_community_like_select"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="24dp" android:layout_marginTop="14dp"
                   app:layout_constraintTop_toBottomOf="@+id/view_donation"/>

        <TextView android:id="@+id/text_like"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/_12ssp"
                  android:textColor="@color/colorBlackTitle"
                  android:text="1K"
                  android:fontFamily="@font/poppins_semibold"
                  app:layout_constraintStart_toEndOf="@+id/image_like"
                  android:layout_marginStart="5dp"
                  android:layout_marginTop="14dp"
                  app:layout_constraintTop_toBottomOf="@+id/view_donation"/>


        <ImageView android:id="@+id/image_comment"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:srcCompat="@drawable/ic_my_community_comment"
                   android:layout_marginStart="28dp"
                   app:layout_constraintStart_toEndOf="@+id/text_like"
                   android:layout_marginTop="14dp"
                   app:layout_constraintTop_toBottomOf="@+id/view_donation"/>

        <TextView android:id="@+id/text_comment"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/_12ssp"
                  android:textColor="@color/colorBlackTitle"
                  android:text="175"
                  android:fontFamily="@font/poppins_semibold"
                  app:layout_constraintStart_toEndOf="@+id/image_comment"
                  android:layout_marginStart="5dp"
                  android:layout_marginTop="14dp"
                  app:layout_constraintTop_toBottomOf="@+id/view_donation"/>


        <ImageView android:id="@+id/image_share"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:srcCompat="@drawable/ic_my_community_share"
                   android:layout_marginStart="28dp"
                   app:layout_constraintStart_toEndOf="@+id/text_comment"
                   android:layout_marginTop="14dp"
                   app:layout_constraintTop_toBottomOf="@+id/view_donation"/>

        <TextView android:id="@+id/text_share"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/_12ssp"
                  android:textColor="@color/colorBlackTitle"
                  android:text="1.2k"
                  android:fontFamily="@font/poppins_semibold"
                  app:layout_constraintStart_toEndOf="@+id/image_share"
                  android:layout_marginTop="14dp"
                  app:layout_constraintTop_toBottomOf="@+id/view_donation"
                  android:layout_marginStart="5dp"/>


        <Button android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:drawableStart="@drawable/ic_community_interested_star"
                android:drawableEnd="@drawable/ic_community_event_interested_down_arrow"
                android:drawablePadding="@dimen/_4sdp"
                android:text="interested"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingStart="@dimen/_6sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11sdp"
                android:background="@drawable/button_active"
                app:layout_constraintStart_toEndOf="@+id/text_share" android:layout_marginStart="36dp"
                android:layout_marginTop="14dp" app:layout_constraintTop_toBottomOf="@+id/view_donation"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="11dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>