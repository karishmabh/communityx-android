<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraint_root"
            tools:context=".fragments.SignUpOrganizationFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_12sdp"
            android:focusableInTouchMode="true"
            android:paddingTop="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp">

        <TextView
                android:id="@+id/text_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Enter your organization details."
                android:textColor="@color/colorBlackTitle"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <RelativeLayout
                android:id="@+id/view_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_heading">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/circular_image_placeholder"
                    app:cardElevation="@dimen/_2sdp"
                    app:civ_border_color="@color/colorLightestGrey"
                    app:civ_border_width="@dimen/_1sdp"/>

            <ImageView
                    android:id="@+id/image_add_edit"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignEnd="@+id/image_profile"
                    android:layout_alignBottom="@+id/image_profile"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:elevation="3dp"
                    android:src="@drawable/ic_signup_add_image"/>

            <TextView
                    android:id="@+id/text_profile"
                    style="@style/text_size_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/image_profile"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Add Organization Logo"
                    android:textColor="@color/colorBlackTitle"
                    app:layout_constraintStart_toStartOf="parent"/>

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_organization"
                style="@style/textInputLayoutColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="@string/organization_name"
                app:hintTextAppearance="@style/TextInputHint"
                app:layout_constraintTop_toBottomOf="@+id/view_add_image">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_organization"
                    style="@style/textInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:inputType="textCapWords"
                    android:fontFamily="@font/poppins_medium"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_email"
                style="@style/textInputLayoutColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_address"
                app:hintTextAppearance="@style/TextInputHint"
                app:layout_constraintTop_toBottomOf="@+id/textinput_organization">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_email"
                    style="@style/textInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/poppins_medium"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_website"
                style="@style/textInputLayoutColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/website"
                app:hintTextAppearance="@style/TextInputHint"
                app:layout_constraintTop_toBottomOf="@+id/textinput_email">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_website"
                    style="@style/textInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:inputType="textWebEditText"
                    android:fontFamily="@font/poppins_medium"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_postalcode"
                style="@style/textInputLayoutColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/postal_code"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextInputHint"
                app:layout_constraintTop_toBottomOf="@+id/textinput_website">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_postalcode"
                    style="@style/textInputEditText"
                    android:layout_width="match_parent"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"/>
        </android.support.design.widget.TextInputLayout>

        <FrameLayout
                android:id="@+id/view_edit_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textinput_postalcode">
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_mobile"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="Mobile Number"
                    app:hintTextAppearance="@style/TextInputHint"

                    app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_mobile"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prefix_number"
                        android:inputType="number"
                        android:maxLength="13"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_medium"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                    android:id="@+id/text_send_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_otp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_10ssp"
                    android:layout_gravity="right|center"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:textColor="@color/colorPrimary"/>
        </FrameLayout>

        <LinearLayout
                android:id="@+id/view_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:visibility="visible"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/view_otp">
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_create_password"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="Create Password"
                    app:hintTextAppearance="@style/TextInputHint"
                    app:layout_constraintTop_toBottomOf="@+id/resend_otp"
                    app:layout_constraintBottom_toTopOf="@+id/text_confirm_password"
                    app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_create_password"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_medium"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_confirm_password"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@+id/text_create_password"
                    android:hint="Confirm Password"
                    app:hintTextAppearance="@style/TextInputHint"
                    app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_confirm_password"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_medium"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/text_enter_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_otp"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorLightGrey"
                android:layout_marginStart="@dimen/_2sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_edit_mobile"/>

        <LinearLayout
                android:id="@+id/linear_view_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/text_enter_otp">

            <EditText
                    android:id="@+id/edit_otp_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    style="@style/textInputEditText"/>
            <EditText
                    android:id="@+id/edit_otp_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    style="@style/textInputEditText"/>
            <EditText
                    android:id="@+id/edit_otp_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    style="@style/textInputEditText"/>
            <EditText
                    android:id="@+id/edit_otp_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    style="@style/textInputEditText"/>
            <EditText
                    android:id="@+id/edit_otp_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    style="@style/textInputEditText"/>
            <EditText
                    android:id="@+id/edit_otp_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    style="@style/textInputEditText"/>

        </LinearLayout>

        <com.mukesh.OtpView
                android:id="@+id/view_otp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorBlackTitle"
                app:itemCount="6"
                app:itemSpacing="@dimen/_10sdp"
                android:paddingBottom="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_enter_otp"
                app:lineColor="@color/colorLightestGrey"
                app:viewType="line"/>

        <TextView
                android:id="@+id/resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view_otp"
                android:text="@string/resend_otp"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10ssp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="@+id/view_otp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>