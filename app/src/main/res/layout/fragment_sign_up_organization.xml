<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_root"
    android:paddingStart="@dimen/_12sdp"
    android:paddingTop="@dimen/_12sdp"
    android:paddingEnd="@dimen/_12sdp"
    tools:context=".fragments.SignUpOrganizationFragment">

    <TextView
        android:id="@+id/text_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Enter your organization details."
        android:textColor="@color/colorBlackTitle"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/view_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_heading">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/circular_image_placeholder"
            app:cardElevation="@dimen/_2sdp"
            app:civ_border_color="@color/colorLightestGrey"
            app:civ_border_width="@dimen/_1sdp" />

        <ImageView
            android:id="@+id/image_add_edit"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignEnd="@+id/image_profile"
            android:layout_alignBottom="@+id/image_profile"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:elevation="3dp"
            android:src="@drawable/ic_signup_add_image" />

        <TextView
            style="@style/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/image_profile"
            android:fontFamily="@font/poppins_medium"
            android:text="Add Organization Logo"
            android:textColor="@color/colorBlackTitle"
            app:layout_constraintStart_toStartOf="parent" />

    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinput_organization"
        style="@style/textInputLayoutColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:hint="@string/organization_name"
        app:hintTextAppearance="@style/TextInputHint"
        app:layout_constraintTop_toBottomOf="@+id/view_add_image">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_organization"
            style="@style/textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinput_email"
        style="@style/textInputLayoutColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_address"
        app:hintTextAppearance="@style/TextInputHint"
        app:layout_constraintTop_toBottomOf="@+id/textinput_organization">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_email"
            style="@style/textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinput_website"
        style="@style/textInputLayoutColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/website"
        app:hintTextAppearance="@style/TextInputHint"
        app:layout_constraintTop_toBottomOf="@+id/textinput_email">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_website"
            style="@style/textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinput_postalcode"
        style="@style/textInputLayoutColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/postal_code"
        app:hintTextAppearance="@style/TextInputHint"
        app:layout_constraintTop_toBottomOf="@+id/textinput_website">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_postalcode"
            style="@style/textInputEditText"
            android:layout_width="match_parent"
            android:maxLength="10"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium" />
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>