<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:paddingStart="@dimen/_12sdp"
        >

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user_profile"
            android:src="@drawable/profile_placeholder"
            android:layout_width="@dimen/_43sdp"
            android:layout_height="@dimen/_43sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/text_user_name"
            android:text="Anthony Graham"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorBlackTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/image_user_profile"
            android:layout_marginStart="13dp"
            android:layout_marginTop="@dimen/_21sdp"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:id="@+id/text_location"
            android:text="Leagal Counsel @ ACLU"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorLightGrey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/image_user_profile"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="@dimen/_18sdp"
            app:layout_constraintBottom_toTopOf="@+id/view_divider_one"/>


    <TextView
            android:id="@+id/text_admin"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_10ssp"
            android:text="@string/group_admin"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/bg_stroke_active"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/colorPrimary"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_17sdp"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toTopOf="@+id/view_divider_one"/>

    <View
            android:id="@+id/view_divider_one"
            android:background="@color/colorLightestGrey"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_user_profile"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_height="0.7dp"/>
</android.support.constraint.ConstraintLayout>