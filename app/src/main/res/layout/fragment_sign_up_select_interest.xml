<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_12sdp"
            android:id="@+id/scrollView"
            tools:context=".fragments.SignUpSelectInterest">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/text_heading"
                android:layout_width="@dimen/_241sdp"
                android:text="@string/what_causes_do_you_care_about"
                style="@style/text_size_small"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackTitle"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/text_civil_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorAccent"
                android:text="@string/civil_rights"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_heading"/>

        <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flex_layout_civil_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_civil_right">

        </com.google.android.flexbox.FlexboxLayout>

        <TextView
                android:id="@+id/text_human_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorAccent"
                android:text="@string/human_rights"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/flex_layout_civil_right"/>

        <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flex_layout_human_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_human_right">

        </com.google.android.flexbox.FlexboxLayout>

        <TextView
                android:id="@+id/text_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorAccent"
                android:text="@string/health"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/flex_layout_human_right"/>

        <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flex_layout_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_health">

        </com.google.android.flexbox.FlexboxLayout>

        <TextView
                android:id="@+id/text_cause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorAccent"
                android:text="@string/are_we_missing_something_suggest_a_cause"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/flex_layout_health"/>

        <EditText
                android:id="@+id/edit_cause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_interest_inactive"
                android:hint="Type here..."
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toBottomOf="@id/text_cause"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableEnd="@drawable/ic_signup_add_interest"/>

        <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flex_layout_cause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_cause">

        </com.google.android.flexbox.FlexboxLayout>
    </android.support.constraint.ConstraintLayout>

</ScrollView>