<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/dots_indicator"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/topView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView android:id="@+id/text_heading"
                      android:layout_width="wrap_content"
                      android:text="@string/let_s_get_your_account_set_up"
                      style="@style/text_size_small"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorBlackTitle"
                      android:fontFamily="@font/poppins_semibold"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_marginTop="@dimen/_12sdp"
                      android:layout_marginStart="@dimen/_15sdp"
                      app:layout_constraintStart_toStartOf="parent"/>

            <RelativeLayout android:id="@+id/view_add_image"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintTop_toBottomOf="@+id/text_heading"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/_15sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_profile"
                        android:layout_width="@dimen/_50sdp"
                        app:cardElevation="@dimen/_2sdp"
                        android:src="@drawable/profile_placeholder"
                        android:layout_height="@dimen/_50sdp">

                </de.hdodenhof.circleimageview.CircleImageView>

                <ImageView
                           android:id="@+id/image_add_edit"
                           android:layout_width="@dimen/_20sdp"
                           android:src="@drawable/ic_signup_add_image"
                           android:layout_alignBottom="@+id/image_profile"
                           android:elevation="3dp"
                           android:layout_marginStart="@dimen/_2sdp"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:layout_alignEnd="@+id/image_profile"
                           android:layout_height="@dimen/_20sdp"/>

                <TextView
                        android:id="@+id/text_profile"
                        android:layout_width="wrap_content"
                        android:text="@string/add_profile_image"
                        style="@style/text_size_small"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlackTitle"
                        android:layout_toRightOf="@+id/image_profile"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"/>

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_email_username"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="@string/full_name"
                    app:hintTextAppearance="@style/TextInputHint"
                    app:layout_constraintTop_toBottomOf="@+id/view_add_image"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_email_username"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_email"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="@string/email"
                    app:hintTextAppearance="@style/TextInputHint"
                    app:layout_constraintTop_toBottomOf="@+id/textinput_email_username"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_email"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_birthday"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="@string/birthday"
                    app:hintTextAppearance="@style/TextInputHint"
                    app:layout_constraintTop_toBottomOf="@+id/textinput_email"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_birthday"
                        style="@style/textInputEditText"
                        android:drawableEnd="@drawable/ic_signup_calendar"
                        android:layout_width="match_parent"
                        tools:text="12/07/2018"
                        android:inputType="date"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_password"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="@string/postal_code"
                    app:hintTextAppearance="@style/TextInputHint"
                    app:layout_constraintTop_toBottomOf="@id/textinput_birthday"
                    app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_password"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"/>
            </android.support.design.widget.TextInputLayout>

            <FrameLayout
                    android:id="@+id/view_edit_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textinput_password">
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_mobile"
                        style="@style/textInputLayoutColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:hint="Mobile Number"
                        app:hintTextAppearance="@style/TextInputHint"

                        app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/edit_mobile"
                            style="@style/textInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+91"
                            android:inputType="number"
                            android:maxLength="13"
                            android:fontFamily="@font/poppins_medium"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                        android:id="@+id/text_send_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_otp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize= "@dimen/_10ssp"
                        android:layout_gravity="right|center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:textColor="@color/colorPrimary"/>
            </FrameLayout>

            <LinearLayout
                    android:id="@+id/view_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:visibility="visible"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/view_otp">
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_create_password"
                        style="@style/textInputLayoutColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:hint="Create Password"
                        app:hintTextAppearance="@style/TextInputHint"
                        app:layout_constraintTop_toBottomOf="@+id/resend_otp"
                        app:layout_constraintBottom_toTopOf="@+id/text_confirm_password"
                        app:passwordToggleEnabled="false">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/edit_create_password"
                            style="@style/textInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:maxLength="10"
                            android:fontFamily="@font/poppins_medium"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_confirm_password"
                        style="@style/textInputLayoutColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        app:layout_constraintTop_toBottomOf="@+id/text_create_password"
                        android:hint="Confirm Password"
                        app:hintTextAppearance="@style/TextInputHint"
                        app:passwordToggleEnabled="false">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/edit_confirm_password"
                            style="@style/textInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:maxLength="10"
                            android:fontFamily="@font/poppins_medium"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                    android:id="@+id/text_enter_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_otp"
                    android:textSize="@dimen/_9ssp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/colorLightGrey"
                    android:layout_marginStart="@dimen/_18sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_edit_mobile"/>

            <LinearLayout
                    android:id="@+id/view_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    app:layout_constraintTop_toBottomOf="@id/text_enter_otp">

                <EditText
                        android:id="@+id/edit_otp_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        style="@style/textInputEditText"/>
                <EditText
                        android:id="@+id/edit_otp_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        style="@style/textInputEditText"/>
                <EditText
                        android:id="@+id/edit_otp_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        style="@style/textInputEditText"/>
                <EditText
                        android:id="@+id/edit_otp_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        style="@style/textInputEditText"/>
                <EditText
                        android:id="@+id/edit_otp_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        style="@style/textInputEditText"/>
                <EditText
                        android:id="@+id/edit_otp_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        style="@style/textInputEditText"/>

            </LinearLayout>
            <TextView
                    android:id="@+id/resend_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/view_otp"
                    android:text="@string/resend_otp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintEnd_toEndOf="@+id/view_otp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>