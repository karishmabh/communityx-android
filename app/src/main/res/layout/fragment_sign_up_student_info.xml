<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <ScrollView
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/dots_indicator"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@+id/topView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView android:id="@+id/text_heading"
                      android:layout_width="wrap_content"
                      android:text="@string/let_s_get_your_account_set_up"
                      style="@style/text_size_small"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorBlackTitle"
                      android:fontFamily="@font/poppins_semibold"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_marginTop="@dimen/_12sdp"
                      android:layout_marginStart="@dimen/_15sdp"
                      app:layout_constraintStart_toStartOf="parent"/>

            <RelativeLayout android:id="@+id/view_add_image"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintTop_toBottomOf="@+id/text_heading"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/_15sdp">

                <android.support.v7.widget.CardView
                        android:id="@+id/card_add_image"
                        android:layout_width="70dp"
                        app:cardElevation="@dimen/_2sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="35dp"
                        android:layout_height="70dp">

                    <ImageView android:layout_height="60dp"
                               android:padding="@dimen/_5sdp"
                               android:layout_gravity="center"
                               android:scaleType="centerInside"
                               android:src="@drawable/ic_signup_placeholder_image"
                               android:layout_width="60dp"/>
                </android.support.v7.widget.CardView>

                <ImageView android:layout_width="@dimen/_20sdp"
                           android:src="@drawable/ic_signup_add_image"
                           android:layout_alignBottom="@+id/card_add_image"
                           android:elevation="3dp"
                           android:layout_marginStart="@dimen/_2sdp"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:layout_alignEnd="@+id/card_add_image"
                           android:layout_height="@dimen/_20sdp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:text="Add Pofile Image"
                        style="@style/text_size_small"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlackTitle"
                        android:layout_toRightOf="@+id/card_add_image"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"/>

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_email_username"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="Full Name"
                    app:layout_constraintTop_toBottomOf="@+id/view_add_image"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_email_username"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_email"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="Email"
                    app:layout_constraintTop_toBottomOf="@+id/textinput_email_username"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_email"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_birthday"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="Birthday"
                    app:layout_constraintTop_toBottomOf="@+id/textinput_email"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_birthday"
                        style="@style/textInputEditText"
                        android:drawableEnd="@drawable/ic_signup_calendar"
                        android:layout_width="match_parent"
                        android:text="12/07/2018"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_password"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="Postal Code"
                    app:layout_constraintTop_toBottomOf="@id/textinput_birthday"
                    app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_password"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_mobile"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="Mobile"
                    app:layout_constraintTop_toBottomOf="@id/textinput_password"
                    app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_mobile"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"/>
            </android.support.design.widget.TextInputLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>