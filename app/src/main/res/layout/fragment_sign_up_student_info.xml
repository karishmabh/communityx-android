<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraint_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dots_indicator"
            app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/topView">

            <TextView
                    android:id="@+id/text_heading"
                    style="@style/text_size_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/let_s_get_your_account_set_up"
                    android:textColor="@color/colorBlackTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <RelativeLayout
                    android:id="@+id/view_add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_heading">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_profile"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/profile_placeholder"
                        app:cardElevation="@dimen/_2sdp"/>

                <ImageView
                        android:id="@+id/image_add_edit"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignEnd="@+id/image_profile"
                        android:layout_alignBottom="@+id/image_profile"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:elevation="3dp"
                        android:src="@drawable/ic_signup_add_image"/>

                <TextView
                        android:id="@+id/text_profile"
                        style="@style/text_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/image_profile"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/add_profile_image"
                        android:textColor="@color/colorBlackTitle"
                        app:layout_constraintStart_toStartOf="parent"/>
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_first_name"
                style="@style/textInputLayoutColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:hint="@string/first_name"
                app:hintTextAppearance="@style/TextInputHint"
                app:layout_constraintTop_toBottomOf="@+id/view_add_image">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_first_name"
                    style="@style/textInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="textCapWords"
                    android:maxLength="30"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_last_name"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="@string/last_name"
                    app:hintTextAppearance="@style/TextInputHint"
                    app:layout_constraintTop_toBottomOf="@+id/textinput_first_name">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_last_name"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_email"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="@string/email"
                    app:hintTextAppearance="@style/TextInputHint"
                    app:layout_constraintTop_toBottomOf="@+id/textinput_last_name">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_email"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:maxLength="50"
                        android:lines="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_birthday"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="@string/birthday"
                    app:hintTextAppearance="@style/TextInputHint"
                    app:layout_constraintTop_toBottomOf="@+id/textinput_email">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_birthday"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_signup_calendar"
                        android:focusable="false"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/poppins_medium"
                        android:inputType="date" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_postalcode"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="@string/postal_code"
                    app:hintTextAppearance="@style/TextInputHint"
                    app:layout_constraintTop_toBottomOf="@id/textinput_birthday"
                    app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_postalcode"
                        style="@style/textInputEditText"
                        android:imeOptions="actionNext"
                        android:digits="@string/mobile_digits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:inputType="numberDecimal"
                        android:maxLength="5"/>
            </android.support.design.widget.TextInputLayout>

            <FrameLayout
                    android:id="@+id/view_edit_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textinput_postalcode">

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_mobile"
                        style="@style/textInputLayoutColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:hint="Mobile Number"
                        app:hintTextAppearance="@style/TextInputHint"
                        app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/edit_mobile"
                            style="@style/textInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:digits="@string/mobile_digits"
                            android:maxLength="13"
                            android:maxLines="1"
                            android:text="@string/prefix_number"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                        android:id="@+id/text_send_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/send_otp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10ssp"/>
            </FrameLayout>

            <TextView
                    android:id="@+id/text_enter_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/enter_otp"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="@dimen/_9ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_edit_mobile"/>

            <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/linear_view_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    app:layout_constraintTop_toBottomOf="@id/text_enter_otp">

                <EditText
                        android:id="@+id/edit_otp_one"
                        style="@style/textInputEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"/>

                <EditText
                        android:id="@+id/edit_otp_two"
                        style="@style/textInputEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"/>

                <EditText
                        android:id="@+id/edit_otp_three"
                        style="@style/textInputEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"/>

                <EditText
                        android:id="@+id/edit_otp_four"
                        style="@style/textInputEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"/>

                <EditText
                        android:id="@+id/edit_otp_five"
                        style="@style/textInputEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"/>

                <EditText
                        android:id="@+id/edit_otp_six"
                        style="@style/textInputEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"/>
            </LinearLayout>

            <com.mukesh.OtpView
                    android:id="@+id/view_otp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/colorBlackTitle"
                    app:itemCount="6"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintWidth_default="spread"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:itemSpacing="@dimen/_5sdp"
                    app:itemWidth="@dimen/_42sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_enter_otp"
                    app:lineColor="@color/colorLightestGrey"
                    app:viewType="line"/>

            <TextView
                    android:id="@+id/resend_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/resend_otp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="@+id/view_otp"
                    app:layout_constraintTop_toBottomOf="@+id/view_otp"/>

            <LinearLayout
                    android:id="@+id/view_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/view_otp"
                    tools:visibility="visible">

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_create_password"
                        style="@style/textInputLayoutColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:hint="Create Password"
                        app:hintTextAppearance="@style/TextInputHint"
                        app:layout_constraintBottom_toTopOf="@+id/text_confirm_password"
                        app:layout_constraintTop_toBottomOf="@+id/resend_otp"
                        app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/edit_create_password"
                            style="@style/textInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:inputType="textPassword"
                            android:maxLength="20"
                            android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_confirm_password"
                        style="@style/textInputLayoutColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:hint="Confirm Password"
                        app:hintTextAppearance="@style/TextInputHint"
                        app:layout_constraintTop_toBottomOf="@+id/text_create_password"
                        app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/edit_confirm_password"
                            style="@style/textInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:imeOptions="actionDone"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:fontFamily="@font/poppins_medium"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>