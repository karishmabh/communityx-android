<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.ForgotPasswordActivity">

    <include
        android:id="@+id/topView"
        layout="@layout/toolbar_forgot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_forgot_password_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="@dimen/_2sdp"
        android:text="@string/please_enter_the_verification_code_we_just_sent_you_on_your_mobile_number_202"
        android:textColor="@color/colorLightGrey"
        android:textSize="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/topView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.mukesh.OtpView
        android:id="@+id/view_otp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="@color/colorBlackTitle"
        app:itemCount="6"
        app:itemSpacing="@dimen/_10sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_forgot_password_details"
        app:lineColor="@color/colorLightestGrey"
        app:viewType="line"/>

    <Button
        android:id="@+id/button_send"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@drawable/button_active"
        android:text="@string/verify"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/view_otp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/button_send"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|center"
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            style="@style/text_size_smaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/if_you_didn_t_receive_a_code"
            android:textColor="@color/colorLightGrey"/>

        <TextView
            android:id="@+id/text_signup"
            style="@style/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/resend"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>