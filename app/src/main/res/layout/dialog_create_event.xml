<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
            android:id="@+id/text_title"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/colorBlackTitle"
            android:text="Alert"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_dialog" android:layout_marginStart="17dp"/>


    <TextView
            android:id="@+id/text_content"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorBlackTitle"
            android:text="Earthquake reported in your area. Do you need any help? "
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@+id/text_title"
            app:layout_constraintStart_toEndOf="@+id/image_dialog" android:layout_marginStart="17dp"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_posting_content_image_cross"
               android:layout_marginEnd="16dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="16dp"/>

    <Button android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/bg_stroke_active"
            android:fontFamily="@font/poppins_semibold"
            android:text="Yes, I NEED HELP"
            android:id="@+id/button_yes"
            android:textColor="?colorAccent"
            android:textSize="@dimen/_10ssp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="@dimen/_14sdp"
            app:layout_constraintTop_toBottomOf="@+id/text_content"
            app:layout_constraintStart_toEndOf="@+id/image_dialog" android:layout_marginStart="17dp"/>

    <Button android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/button_active"
            android:fontFamily="@font/poppins_semibold"
            android:text="No, I AM SAFE"
            android:id="@+id/button_no"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/colorWhite"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="@dimen/_14sdp"
            app:layout_constraintTop_toBottomOf="@+id/text_content"
            app:layout_constraintStart_toEndOf="@+id/button_yes"
            android:layout_marginStart="@dimen/_4ssp"/>

    <ImageView
            android:id="@+id/image_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alert_popup_alert"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp" app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>