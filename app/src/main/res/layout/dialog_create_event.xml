<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="@dimen/_160sdp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
            android:id="@+id/text_title"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/colorBlackTitle"
            android:text="Alert"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"/>


    <TextView android:id="@+id/text_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/_12ssp"
              android:layout_marginEnd="@dimen/_17sdp"
              android:textColor="@color/colorBlackTitle"
              android:text="Earthquake reported in your area. Do you need any help? "
              android:fontFamily="@font/poppins_regular"
              app:layout_constraintTop_toBottomOf="@+id/text_title"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="80dp"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_posting_content_image_cross"
               android:layout_marginEnd="16dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="16dp"/>

    <Button android:layout_width="@dimen/_105sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/bg_stroke_active"
            android:fontFamily="@font/poppins_semibold"
            android:text="Yes, I NEED HELP"
            android:id="@+id/button_yes"
            android:textColor="?colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/text_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"/>

    <Button android:layout_width="@dimen/_105sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/button_active"
            android:fontFamily="@font/poppins_semibold"
            android:text="No, I AM SAFE"
            android:id="@+id/button_no"
            android:textColor="@color/colorWhite"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/text_content" app:layout_constraintStart_toEndOf="@+id/button_yes"
            android:layout_marginStart="12dp"/>


</android.support.constraint.ConstraintLayout>