<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_80sdp"
                                            xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_praise_back_arrow"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="56dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:id="@+id/imageBack"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user_profile"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_40sdp"
                app:layout_constraintStart_toEndOf="@+id/imageBack"
                android:src="@drawable/profile_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Group Name"
                android:id="@+id/text_title"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintStart_toEndOf="@+id/image_user_profile"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/_34sdp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/text_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Create by at 7:15 pm"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11ssp"
                app:layout_goneMarginBottom="@dimen/_10ssp"
                app:layout_constraintTop_toBottomOf="@+id/text_title"
                app:layout_constraintStart_toEndOf="@id/image_user_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="12dp"/>

        <ImageView
                android:id="@+id/image_tail_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_group_info_nav_edit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/image_tail_two"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/_14sdp"/>

        <ImageView
                android:id="@+id/image_tail_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_group_info_nav_add_group_member"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/_12sdp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.AppBarLayout>