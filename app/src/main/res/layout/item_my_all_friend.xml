<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:layout_height="wrap_content">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="A"
              android:id="@+id/text_letter"
              android:visibility="gone"
              tools:visibility="visible"
              android:textSize="@dimen/_11sdp"
              android:textColor="@color/colorBlackTitle"
              android:fontFamily="@font/poppins_medium"
              android:paddingStart="@dimen/_14ssp"
              android:paddingTop="@dimen/_2sdp"
              android:background="@color/colorBackground"/>

    <android.support.constraint.ConstraintLayout
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/image_user"
                android:layout_width="@dimen/_43sdp"
                android:layout_height="@dimen/_43sdp"
                android:src="@drawable/ic_signup_placeholder_image"
                android:layout_marginStart="@dimen/_18sdp"
                android:scaleType="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center_vertical"
                      app:layout_constraintStart_toEndOf="@id/image_user"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Allan Jennings"
                      android:id="@+id/text_name"
                      android:textColor="@color/colorBlackTitle"
                      android:fontFamily="@font/poppins_semibold"
                      android:textSize="@dimen/_12ssp"
                      android:layout_marginStart="@dimen/_12sdp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Leagal Counsel @ ACLU"
                      android:id="@+id/text_location"
                      android:textColor="@color/colorLightGrey"
                      android:fontFamily="@font/poppins_regular"
                      android:textSize="@dimen/_10ssp"
                      android:layout_marginStart="@dimen/_12sdp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/view_icons"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:layout_marginEnd="@dimen/_8sdp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                    android:id="@+id/image_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_suggestion_friend_message"
                    android:background="@drawable/bg_green_outline"
                    android:paddingLeft="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_12sdp"/>

            <ImageView
                    android:id="@+id/image_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_all_friend_more"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>