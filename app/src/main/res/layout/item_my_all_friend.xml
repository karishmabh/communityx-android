<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_height="wrap_content">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="A"
              android:id="@+id/text_letter"
              android:visibility="gone"
              tools:visibility="visible"
              android:textSize="@dimen/_11ssp"
              android:textColor="@color/colorBlackTitle"
              android:fontFamily="@font/poppins_medium"
              android:paddingStart="@dimen/_14sdp"
              android:paddingEnd="@dimen/_14sdp"
              android:paddingTop="@dimen/_1sdp"
              android:background="@color/colorBackground"/>

    <RelativeLayout
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user"
                android:layout_width="@dimen/_33sdp"
                android:layout_height="@dimen/_33sdp"
                android:src="@drawable/profile_placeholder"
                android:layout_marginStart="@dimen/_18sdp"
                app:civ_border_color="@android:color/background_light"
                app:civ_border_width="3dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

        <LinearLayout
                android:id="@+id/linear_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/image_user"
                android:layout_toStartOf="@+id/view_icons"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_1ssp"
                android:paddingStart="@dimen/_1ssp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Allddddddd"
                      android:id="@+id/text_name"
                      android:textColor="@color/colorBlackTitle"
                      android:fontFamily="@font/poppins_semibold"
                      android:textSize="@dimen/_11ssp"
                      android:includeFontPadding="false"
                      android:layout_marginStart="@dimen/_12sdp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Leagal Counsel @ ACLU"
                      android:includeFontPadding="false"
                      android:id="@+id/text_profession"
                      android:textColor="@color/colorLightGrey"
                      android:fontFamily="@font/poppins_regular"
                      android:textSize="@dimen/_9ssp"
                      android:layout_marginStart="@dimen/_12sdp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/view_icons"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="@dimen/_8sdp">
            <ImageView
                    android:id="@+id/image_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_suggestion_friend_message"
                    android:background="@drawable/bg_green_outline"
                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:contentDescription="@null"
                    android:paddingEnd="@dimen/_4sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_12sdp"/>

            <ImageView
                    android:id="@+id/image_option"
                    android:contentDescription="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_all_friend_more"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>