<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@color/colorLightGrey"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />

    <TextView
        android:id="@+id/text_title"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/poppins_bold"
        android:text="HCL Infosystems"
        android:textColor="@color/colorBlackTitle"
        app:layout_constraintTop_toTopOf="@id/image_logo"
        app:layout_constraintStart_toEndOf="@+id/image_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_subtitle"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/information_technology_and_services"
        android:textColor="@color/colorLightGrey"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toEndOf="@+id/image_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/text_subtitle"
        android:background="@color/colorLightestGrey"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"/>
</android.support.constraint.ConstraintLayout>