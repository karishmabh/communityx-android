<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SignUpMemberOfClub">

    <TextView android:id="@+id/text_heading"
              android:layout_width="@dimen/_241sdp"
              android:text="@string/are_you_a_member_of_any_clubs"
              style="@style/text_size_small"
              android:layout_height="wrap_content"
              android:textColor="@color/colorBlackTitle"
              android:fontFamily="@font/poppins_semibold"
              android:layout_marginTop="@dimen/_12sdp"
              android:layout_marginStart="@dimen/_15sdp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/text_club_name_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/club_name"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/colorLightGrey"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_heading"/>

    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_club_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/spinner_dropdown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_club_name_hint"
            tools:listitem="@tools:sample/full_names"/>

    <View
            android:id="@+id/view_divider_one"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLightGrey"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_club_name"/>

    <TextView
            android:id="@+id/text_role_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_role"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/colorLightGrey"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_divider_one"/>

    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/spinner_dropdown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_role_hint"
            tools:listitem="@tools:sample/cities"/>

    <View
            android:id="@+id/view_divider_two"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLightGrey"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_role"/>

</android.support.constraint.ConstraintLayout>