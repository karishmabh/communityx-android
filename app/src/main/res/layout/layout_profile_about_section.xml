<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBackgroundCard"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="@dimen/_8sdp">

    <LinearLayout
            android:id="@+id/view_add_about"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_profile_job"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGrey"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/poppins_regular"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/add_your_work_experiences"/>

        <Button
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_11ssp"
                android:textColor="?colorPrimary"
                android:background="@drawable/bg_white_orange_stroke"
                android:text="@string/add_experience"
                android:drawablePadding="-40dp"
                android:paddingStart="50dp"
                android:drawableTint="?colorPrimary"
                android:foreground="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_my_profile_add_gray"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/view_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/_12sdp">

        <ImageView
                android:id="@+id/edit_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="?colorPrimary"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:padding="@dimen/_4sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/ic_create_crowdfunding_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/text_eduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorBlackTitle"
                android:text="@string/education"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/text_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorLightGrey"
                android:text="@string/school_name"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_eduction"/>

        <TextView
                android:id="@+id/text_school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorBlackTitle"
                android:text="ABC International School"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_100sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_eduction"/>

        <TextView
                android:id="@+id/text_current_year_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorLightGrey"
                android:text="@string/current_year"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_school"/>

        <TextView
                android:id="@+id/text_current_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorBlackTitle"
                android:text="Senior"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_100sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_school"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/view_club_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/_12sdp">

        <ImageView
                android:id="@+id/edit_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="?colorPrimary"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:padding="@dimen/_4sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/ic_create_crowdfunding_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/text_club_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorBlackTitle"
                android:text="@string/club_organizations"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/text_club_name_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorLightGrey"
                android:text="Club Name"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_club_organization"/>

        <TextView
                android:id="@+id/text_club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorBlackTitle"
                android:text="Amnesty International"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_100sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_club_organization"/>

        <TextView
                android:id="@+id/text_role_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorLightGrey"
                android:text="Role"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_club_name_hint"/>

        <TextView
                android:id="@+id/text_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorBlackTitle"
                android:text="President"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_100sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_role_hint"
                app:layout_constraintTop_toBottomOf="@id/text_club_name_hint"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/view_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/_12sdp">

        <ImageView
                android:id="@+id/edit_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="?colorPrimary"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:padding="@dimen/_4sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/ic_create_crowdfunding_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/text_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorBlackTitle"
                android:text="@string/about"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/text_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorLightGrey"
                android:text="Email"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_about"/>

        <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorPrimary"
                android:text="amandablake321@gmail.com"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_100sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_about"/>

        <TextView
                android:id="@+id/text_birthday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorLightGrey"
                android:text="Birthday"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_email_label"/>

        <TextView
                android:id="@+id/text_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorBlackTitle"
                android:text="Mar 20, 2005"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_100sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_birthday_label"
                app:layout_constraintTop_toBottomOf="@id/text_email_label"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>