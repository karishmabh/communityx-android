<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingTop="@dimen/_12sdp"
        android:id="@+id/coordinator_main"
        tools:context=".fragments.SignUpProfessional">

    <TextView
            android:id="@+id/text_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_your_work_history"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/colorBlackTitle"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput_organization"
            style="@style/textInputLayoutColor"
            android:layout_width="match_parent"
            android:hint="@string/recent_job_title"
            app:hintTextAppearance="@style/TextInputHint"
            app:layout_constraintTop_toBottomOf="@+id/text_heading"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_job_title"
                style="@style/textInputEditText"
                android:layout_width="match_parent"
                tools:text="UI/UX Designer"
                android:singleLine="true"
                android:maxLength="50"
                android:inputType="textCapWords"
                android:fontFamily="@font/poppins_medium"
                android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput_email"
            style="@style/textInputLayoutColor"
            android:layout_width="match_parent"
            android:hint="@string/recent_compnay"
            app:hintTextAppearance="@style/TextInputHint"
            app:layout_constraintTop_toBottomOf="@+id/textinput_organization"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_recent_company"
                style="@style/textInputEditText"
                android:layout_width="match_parent"
                tools:text="Abc Design Tech"
                android:singleLine="true"
                android:maxLength="50"
                android:inputType="textCapWords"
                android:fontFamily="@font/poppins_medium"
                android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>