<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_12sdp">


    <TextView
        android:id="@+id/text_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Work Experience"
        android:textColor="@color/colorBlackTitle"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="?colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_8sdp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:src="@drawable/ic_create_crowdfunding_edit"/>

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:background="#e9e9e9"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_all_friend_tab_friend_select"
        android:tint="@color/colorLightGrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_heading"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Sr. iOS Developer"
        android:textColor="@color/colorBlackTitle"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@id/image_logo"
        app:layout_constraintTop_toBottomOf="@id/text_heading" />

    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="IBM"
        android:textColor="@color/colorBlackTitle"
        android:textSize="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_22sdp"
        app:layout_constraintStart_toEndOf="@id/image_logo"
        app:layout_constraintTop_toBottomOf="@id/text_title" />

    <TextView
        android:id="@+id/text_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Oct 2017 - Jan 2018 1 yrs 4 mos"
        android:textColor="@color/colorBlackTitle"
        android:textSize="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_22sdp"
        app:layout_constraintStart_toEndOf="@id/image_logo"
        app:layout_constraintTop_toBottomOf="@id/text_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>