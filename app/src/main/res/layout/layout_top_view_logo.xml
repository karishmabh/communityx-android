<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardElevation="@dimen/_3sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/view_too_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_12sdp">

        <ImageView android:layout_width="@dimen/_150sdp"
                   android:layout_alignParentEnd="true"
                   android:layout_marginTop="-60dp"
                   android:layout_marginEnd="-50dp"
                   android:src="@drawable/ic_welcome_top_circle"
                   android:layout_height="@dimen/_150sdp"/>

        <LinearLayout
                android:id="@+id/view_logo"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:src="@drawable/ic_welcome_logo"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_width="@dimen/_30sdp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorPrimary"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:textAllCaps="true"
                      android:visibility="gone"
                      android:fontFamily="@font/josefinsans_regular"
                      style="@style/text_size_normal"
                      android:text="CommunityX"/>

            <TextView
                      android:id="@+id/text_subtitle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorBlackTitle"
                      android:layout_marginTop="@dimen/_2sdp"
                      android:fontFamily="@font/poppins_regular"
                      style="@style/text_size_smaller"
                      android:text="Please login to continue"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>