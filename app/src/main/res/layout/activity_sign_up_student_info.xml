<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <include android:id="@+id/topView"
             app:layout_constraintTop_toTopOf="parent"
             layout="@layout/layout_top_view_logo"/>

    <ScrollView
            app:layout_constraintTop_toBottomOf="@+id/topView"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/dots_indicator"
            android:layout_height="0dp">

        <android.support.constraint.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@+id/topView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView android:id="@+id/text_heading"
                      android:layout_width="wrap_content"
                      android:text="Let's get your account set up."
                      style="@style/text_size_small"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorBlackTitle"
                      android:fontFamily="@font/poppins_semibold"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_marginTop="@dimen/_10sdp"
                      android:layout_marginStart="@dimen/_15sdp"
                      app:layout_constraintStart_toStartOf="parent"/>

            <RelativeLayout android:id="@+id/view_add_image"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintTop_toBottomOf="@+id/text_heading"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/_15sdp">

                <android.support.v7.widget.CardView
                        android:id="@+id/card_add_image"
                        android:layout_width="70dp"
                        app:cardElevation="@dimen/_2sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="35dp"
                        android:layout_height="70dp">

                    <ImageView android:layout_height="60dp"
                               android:padding="@dimen/_5sdp"
                               android:layout_gravity="center"
                               android:scaleType="centerInside"
                               android:src="@drawable/ic_signup_placeholder_image"
                               android:layout_width="60dp"/>
                </android.support.v7.widget.CardView>

                <ImageView android:layout_width="@dimen/_20sdp"
                           android:src="@drawable/ic_signup_add_image"
                           android:layout_alignBottom="@+id/card_add_image"
                           android:elevation="3dp"
                           android:layout_marginStart="@dimen/_2sdp"
                           android:layout_marginTop="@dimen/_2sdp"
                           android:layout_alignEnd="@+id/card_add_image"
                           android:layout_height="@dimen/_20sdp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:text="Add Pofile Image"
                        style="@style/text_size_small"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlackTitle"
                        android:layout_toRightOf="@+id/card_add_image"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"/>

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_email_username"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="Full Name"
                    app:layout_constraintTop_toBottomOf="@+id/view_add_image"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_email_username"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_email"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="Email"
                    app:layout_constraintTop_toBottomOf="@+id/textinput_email_username"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_email"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_birthday"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="Birthday"
                    app:layout_constraintTop_toBottomOf="@+id/textinput_email"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_birthday"
                        style="@style/textInputEditText"
                        android:drawableEnd="@drawable/ic_signup_calendar"
                        android:layout_width="match_parent"
                        android:text="12/07/2018"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_password"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="Postal Code"
                    app:layout_constraintTop_toBottomOf="@id/textinput_birthday"
                    app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_password"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_mobile"
                    style="@style/textInputLayoutColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:hint="Mobile"
                    app:layout_constraintTop_toBottomOf="@id/textinput_password"
                    app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_mobile"
                        style="@style/textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"/>
            </android.support.design.widget.TextInputLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            app:layout_constraintBottom_toTopOf="@+id/button_login"
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            app:dotsColor="@color/colorLightestGrey"
            app:dotsCornerRadius="5dp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:dotsSize="16dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2.5"
            app:selectedDotColor="@color/colorPrimary"
            app:progressMode="true"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginBottom="@dimen/_10sdp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:id="@+id/linearLayout2">

        <TextView
                android:layout_width="wrap_content"
                android:text="Already have an account?"
                style="@style/text_size_smaller"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackTitle"
                android:fontFamily="@font/poppins_regular"/>

        <TextView android:id="@+id/text_signup"
                  android:layout_width="wrap_content"
                  android:text="Login"
                  style="@style/text_size_small"
                  android:layout_height="wrap_content"
                  android:textAllCaps="true"
                  android:textColor="@color/colorPrimary"
                  android:fontFamily="@font/poppins_semibold"
                  android:layout_marginStart="@dimen/_5sdp"/>

    </LinearLayout>

    <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:background="@drawable/button_active"
            android:text="Continue"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:textColor="@android:color/white"
            style="@style/style_button"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"/>

</android.support.constraint.ConstraintLayout>