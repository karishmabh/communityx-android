<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>


       <!-- <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>-->
        <!--
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>-->
    </style>

    <style name="AppCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_size_heading">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="text_size_normal">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="text_size_small">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="text_size_smaller">
    <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="style_button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="textInputLayoutColor" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorBlackTitle</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="textInputEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorLightGrey</item>
        <item name="colorControlActivated">@color/colorLightGrey</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="TextInputHint">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="BottomNavText">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>
</resources>
