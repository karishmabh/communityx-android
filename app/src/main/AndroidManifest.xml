<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.communityx">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".application.MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".activity.AddVolunteerActivity">
        </activity>
        <activity android:name=".activity.SearchSuggestionActivity"/>
        <activity android:name=".activity.AddWorkExperienceActivity"/>
        <activity android:name=".activity.SplashActivity"/>

        <activity-alias
                android:name=".Main"
                android:targetActivity=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity-alias>

        <activity
                android:name=".activity.ForgotPasswordActivity"
                android:label="@string/title_activity_forgot_password"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.SeeAllAboutActivity"/>

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="@string/google_maps_key"/>

        <activity
                android:name=".activity.SendLocationActivity"
                android:windowSoftInputMode="stateHidden|adjustNothing"/>
        <activity android:name=".activity.SignUpStudentInfoActivity"/>
        <activity android:name=".activity.GroupInfoActivity"/>
        <activity android:name=".activity.CreateGroupActivity"/>
        <activity android:name=".activity.EventActivity"/>
        <activity
                android:name=".activity.NewGroupActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".activity.MessageActivity"/>
        <activity android:name=".activity.SignupCategoryActivity"/>
        <activity android:name=".activity.ProfileActivity"/>
        <activity android:name=".activity.EventDetailActivity"/>
        <activity android:name=".activity.DonatedCreatedActivity"/>
        <activity android:name=".activity.CrowdfundingDetailActivity"/>
        <activity
                android:name=".activity.CreatePostActivity"
                android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".activity.PaymentActivity"/>
        <activity
                android:name=".activity.LikesActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".activity.ConnectAlliesActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".activity.DashboardActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
                android:name=".activity.WelcomeActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".activity.LoginActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
        <activity android:name=".activity.PraiseActivity"/>
        <activity android:name=".activity.DonatedByActivity"/>
    </application>

</manifest>